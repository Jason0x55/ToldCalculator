<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center_horizontal"
  tools:context="com.toldcalculator.android.tc.controller.WeightFragment">

  <TextView
    android:id="@+id/weight_data_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Weight Data"
    android:textColor="@android:color/black"
    android:textSize="24sp"
    android:textStyle="bold"
    android:paddingBottom="24dp"/>

  <TextView
    android:id="@+id/bew_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/weight_data_label"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:text="BEW"
    android:textColor="@android:color/black"
    android:textStyle="bold"
    android:textSize="20sp"/>

  <EditText
    android:id="@+id/bew_input"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_alignBaseline="@id/bew_label"
    android:layout_toRightOf="@id/bew_label"
    android:text="11,500"/>

  <TextView
    android:id="@+id/fuel_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/bew_label"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    android:text="Fuel"
    android:textColor="@android:color/black"
    android:textStyle="bold"
    android:textSize="20sp"/>

  <EditText
    android:id="@+id/fuel_input"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_alignBaseline="@id/fuel_label"
    android:layout_toRightOf="@id/fuel_label"
    android:layout_alignRight="@id/bew_input"
    android:textAlignment="viewEnd"
    android:text="3,000"/>

  <TextView
    android:id="@+id/pax_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/fuel_label"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    android:text="PAX"
    android:textColor="@android:color/black"
    android:textStyle="bold"
    android:textSize="20sp"/>

  <EditText
    android:id="@+id/pax_input"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_alignBaseline="@id/pax_label"
    android:layout_toRightOf="@id/pax_label"
    android:layout_alignRight="@id/bew_input"
    android:textAlignment="viewEnd"
    android:text="350"/>

  <TextView
    android:id="@+id/bags_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/pax_label"
    android:paddingRight="8dp"
    android:paddingBottom="24dp"
    android:text="Bags"
    android:textColor="@android:color/black"
    android:textStyle="bold"
    android:textSize="20sp"/>

  <EditText
    android:id="@+id/bags_input"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_alignBaseline="@id/bags_label"
    android:layout_toRightOf="@id/bags_label"
    android:layout_alignRight="@id/bew_input"
    android:textAlignment="viewEnd"
    android:text="250"/>

  <TextView
    android:id="@+id/total_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/bags_label"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    android:text="Total"
    android:textColor="@android:color/black"
    android:textStyle="bold"
    android:textSize="20sp"/>

  <EditText
    android:id="@+id/total_input"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_alignBaseline="@id/total_label"
    android:layout_toRightOf="@id/total_label"
    android:layout_alignRight="@id/bew_input"
    android:textAlignment="viewEnd"
    android:text="15,100"/>
</RelativeLayout>