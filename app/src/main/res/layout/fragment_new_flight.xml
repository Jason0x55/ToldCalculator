<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center_vertical|center_horizontal"
  tools:context="com.toldcalculator.android.tc.view.WeightFragment">

  <TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select Profile:"
    android:textColor="@android:color/black"
    android:textSize="22sp"
    android:textStyle="bold"/>

  <Spinner
    android:id="@+id/aircraft_profiles"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/textView1"
    />

  <TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/textView1"
    android:text="Enter Airport:"
    android:textColor="@android:color/black"
    android:textSize="22sp"
    android:textStyle="bold"/>

  <EditText
    android:id="@+id/airport_text"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_below="@id/aircraft_profiles"
    android:layout_alignRight="@id/aircraft_profiles"
    android:text="KABQ"
    />

  <Button
    android:id="@+id/next_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/airport_text"
    android:layout_alignRight="@id/aircraft_profiles"
    android:text="Next"/>

</RelativeLayout>